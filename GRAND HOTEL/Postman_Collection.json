		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Extract token from login response and set as environment variable",
					"if (pm.request.url.includes('/api/auth/login') && pm.response.code === 200) {",
					"    const responseJson = pm.response.json();",
					"    if (responseJson.token) {",
					"        if (responseJson.email === 'user@example.com') {",
					"            pm.environment.set(\"user_token\", responseJson.token);",
					"            console.log(\"User Token set: \" + responseJson.token);",
					"        } else if (responseJson.email === 'admin@example.com') {",
					"            pm.environment.set(\"admin_token\", responseJson.token);",
					"            console.log(\"Admin Token set: \" + responseJson.token);",
					"        }",
					"    }",
					"}",
					"",
					"// Extract booking ID from create booking response",
					"if (pm.request.url.includes('/api/bookings') && pm.request.method === 'POST' && pm.response.code === 201) {",
					"    const responseJson = pm.response.json();",
					"    if (responseJson.booking && responseJson.booking._id) {",
					"        pm.environment.set(\"booking_id\", responseJson.booking._id);",
					"        console.log(\"Booking ID set: \" + responseJson.booking._id);",
					"    }",
					"}",
					"",
					"// Extract food item ID from create food item response",
					"if (pm.request.url.includes('/api/food') && pm.request.method === 'POST' && pm.response.code === 201) {",
					"    const responseJson = pm.response.json();",
					"    if (responseJson._id) {",
					"        pm.environment.set(\"food_item_id\", responseJson._id);",
					"        console.log(\"Food Item ID set: \" + responseJson._id);",
					"    }",
					"}"
				]
			}
		}
